<div class="row">
    <div class="col-md-6">
        <h3>Create a new post:</h3>

        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title">Post title:</label>
                <input class="form-input" type="text" id="post-title" name="post-title" />
            </div>
            <div class="form-group">
                <label for="post-description">Post content:</label>
                <input class="form-input" type="text" id="post-description" name="post-description" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create post</button>
            </div>
        </form>
    </div>
    {{#if posts.length}}
    <div class="col-md-6 post-list">
        <h3>Your Posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/dashboard.js"></script>