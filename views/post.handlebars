<div class="row text-center">
    <div class="col-md-12">
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-12">
        <h3>Add a comment:</h3>

        <form class="form new-comment-form">
            <div class="form-group">
                <label for="comment-title">Comment title:</label>
                <input class="form-input" type="text" id="comment-title" name="comment-title" />
            </div>
            <div class="form-group">
                <label for="comment-description">Comment text:</label>
                <input class="form-input" type="text" id="comment-description" name="comment-description" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="submitbtn" data-id="{{id}}">Add comment</button>
            </div>
        </form>
    </div>
</div>